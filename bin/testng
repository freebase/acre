#!/bin/sh

# this should be called with ./acre to pickup the environment vars 

# Normalize the current directory
cd `dirname $0`/..

ECHO="/bin/echo"

$ECHO

$ECHO -n "CHECK: python availability... "
python -V &> /dev/null
RET=$?
if [ $RET == 127 ]; then
    $ECHO "FAILED"
    $ECHO "FATAL: These tests require 'python' to be in your path"
    exit 1
else
    $ECHO "PASSED"
fi

$ECHO -n "CHECK: your local acre installation... "
RESP=`curl -s -S -m 5 http://127.0.0.1:$ACRE_PORT/status 2> /dev/null | grep "status: 200 OK"`
if [ -z "$RESP" ]; then
    $ECHO "FAILED"
    $ECHO "FATAL: local acre does not not seem to be running or reachable"
    exit 1
else
    $ECHO "PASSED"
fi

$ECHO -n "CHECK: your local DNS configurations... "
RESP=`curl -s -S -m 5  http://${ACRE_HOST_BASE}:$ACRE_PORT/status 2> /dev/null | grep "status: 200 OK"`
if [ -z "$RESP" ]; then
    $ECHO "FAILED"
    $ECHO "FATAL: make sure '${ACRE_HOST_BASE}' points to 127.0.0.1 in your DNS or /etc/hosts"
    exit 1
else
    $ECHO "PASSED"
fi

TEST_TYPE=$1
shift
if [ -z "$TEST_TYPE" ]; then
    TEST_TYPE="testng"

    $ECHO -n "CHECK: your local DNS configurations for the tests... "
    RESP=`curl -s -S -m 5  http://qa.dev.${ACRE_HOST_BASE}:$ACRE_PORT/status 2> /dev/null | grep "status: 200 OK"`
    if [ -z "$RESP" ]; then
        $ECHO "FAILED"
        $ECHO "FATAL: make sure 'qa.dev.${ACRE_HOST_BASE}' points to 127.0.0.1 in your DNS or /etc/hosts"
        exit 1
    else
        $ECHO "PASSED"
    fi
    
    $ECHO -n "CHECK: local tests are present... "
    RESP=`curl -s -S -m 5  http://qa.dev.${ACRE_HOST_BASE}:$ACRE_PORT/write 2> /dev/null | grep "ok"`
    if [ -z "$RESP" ]; then
        $ECHO "FAILED"
        $ECHO "FATAL: the required local tests don't seem to be available"
        exit 1
    else
        $ECHO "PASSED"
    fi
fi

bin/freebase_check

$ECHO
$ECHO "running tests of type '$TEST_TYPE'"
$ECHO

ARGS=$*
python bin/testrunner -t $TEST_TYPE $ARGS
exit $?
